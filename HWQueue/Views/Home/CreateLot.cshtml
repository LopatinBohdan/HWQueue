@{
}
@model Lot

<header><b>Create new Lot</b></header>

<form method="POST" asp-action="CreateLot">
    <label>Currency</label><br />
   <select asp-for="Currency">
       <option value="USD" selected>USD</option>
       <option value="EUR">EUR</option>
       <option value="CAD">CAD</option>
       <option value="CNY">CNY</option>
       <option value="SEK">SEK</option>
   </select><br />
    <label>Price</label><br />
    <input asp-for="Price" /><br />
    <label>Salesman</label><br />
    <input asp-for="Salesman" /><br /><br />
    <button type="submit" class="btn btn-primary">Create Lot</button>
</form>